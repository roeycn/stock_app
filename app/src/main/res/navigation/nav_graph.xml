<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.example.stockapp.overview.OverviewFragment"
        android:label="fragment_overview"
        tools:layout="@layout/fragment_overview" >
        <action
            android:id="@+id/action_showDetail"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_overviewFragment_to_marsFragment"
            app:destination="@id/marsFragment" />
        <action
            android:id="@+id/action_overviewFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_overviewFragment_to_stockFragment"
            app:destination="@id/stockFragment" />
        <action
            android:id="@+id/action_overviewFragment_to_watchListFragment"
            app:destination="@id/watchListFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.stockapp.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="selectedProperty"
            app:argType="com.example.stockapp.database.Cars" />
    </fragment>
    <fragment
        android:id="@+id/marsFragment"
        android:name="com.example.stockapp.mars.MarsFragment"
        android:label="fragment_mars"
        tools:layout="@layout/fragment_mars" />
    <fragment
        android:id="@+id/stockFragment"
        android:name="com.example.stockapp.stock.StockFragment"
        android:label="StockFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.stockapp.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_stockInfoFragment"
            app:destination="@id/stockInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/watchListFragment"
        android:name="com.example.stockapp.watchlist.WatchListFragment"
        android:label="fragment_watch_list"
        tools:layout="@layout/fragment_watch_list" />
    <fragment
        android:id="@+id/stockInfoFragment"
        android:name="com.example.stockapp.stockinfo.StockInfoFragment"
        android:label="fragment_stock_info"
        tools:layout="@layout/fragment_stock_info" />
</navigation>