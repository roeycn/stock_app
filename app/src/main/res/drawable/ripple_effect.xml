<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/secondaryDarkColor">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryColor" />
            <corners android:radius="@dimen/stock_product_grid_reveal_height" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/design_default_color_primary"
                android:startColor="@color/design_default_color_error"
                android:type="linear" />
            <corners android:radius="@dimen/stock_product_grid_reveal_height" />
        </shape>
    </item>
</ripple>